import { get, getAsObject } from "@parameter1/base-cms-object-path";

$ const { req } = out.global;
$ const nativeAdLayout = get(req, "query.native-ad-layout");
$ const newsletter = getAsObject(input, "newsletter");
$ const { sectionName, date, content } = input;

$ const url = get(content, "siteContext.path");
$ const company = getAsObject(content, "company");

$ const imgStyles = {
  "font-size": "14px",
  "line-height": 0,
  "border": 0,
};

$ const imgLinkStyles = {
  "display": "block",
  "font-size": "14px",
  "line-height": 0,
}

<tr>
  <td align="center" valign="top">
    <table role="presentation" width="610" border="0" align="center" cellpadding="0" cellspacing="0" class="wrap003" style="background-color: #ededed;padding-right: 10px;padding-left: 10px;">
      <tr>
        <td align="left" valign="middle" style="font-size:15px;line-height:20px; color:#666666;font-weight:400;text-align: center;">Sponsored</td>
      </tr>
      <tr>
        <td align="center" valign="top" dir="rtl">
          <table role="presentation" width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td align="right" valign="top" width="270" class="wdt">
                <marko-core-obj-value|{ value: image }| obj=content field="primaryImage" as="object">
                  <marko-newsletter-imgix
                    src=image.src
                    alt=image.alt
                    options={ w: 200, h: 133, fit: "crop", auto: "format,compress" }
                    attrs={ border: 0, style: imgStyles }
                    class="img_resize2"
                  >
                    <@link href=url target="_blank" attrs={ style: imgLinkStyles } />
                  </marko-newsletter-imgix>
                </marko-core-obj-value>
              </td>
              <td align="left" valign="top" dir="ltr">
                <table role="presentation" width="100%" border="0" cellpadding="0" cellspacing="0">
                  <tr>
                    <td align="left" valign="top">
                      <marko-core-obj-value|{ value: image }| obj=content.company field="primaryImage" as="object">
                        <marko-newsletter-imgix
                          src=image.src
                          alt=image.alt
                          options={ w: 180, h: 80, fit: "fill", auto: "format,compress" }
                          attrs={ border: 0, width: 90, style: imgStyles }
                        >
                          <@link href=url target="_blank" attrs={ style: imgLinkStyles } />
                        </marko-newsletter-imgix>
                      </marko-core-obj-value>
                    </td>
                  </tr>
                  <tr>
                    <td align="left" valign="top" style="font-size: 17px;line-height: 22px;color: #3475b6;font-weight: 400;">
                      <a href=url target="_blank" style="font-weight: 600;text-decoration: none;color: #3475b6;padding:0 24px 0 0;">${content.name}</a>
                    </td>
                  </tr>
                  <common-table-spacer-element height="9" />
                  <tr>
                    <td align="left" valign="top" class="mobile1" style="font-size: 17px;line-height: 22px;color: #202022;padding:0 24px 0 0;">${content.teaser}</td>
                  </tr>
                  <common-table-spacer-element height="9" />
                </table>
              </td>
            </tr>
          </table>
        </td>
      </tr>
    </table>
  </td>
</tr>
<common-table-spacer-element height="20" />
